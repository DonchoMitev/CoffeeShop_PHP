{% extends 'base.html.twig' %}

{% block main %}
    <section class="site-contacts">
        <header class="section-title page">
            <h2 class="page-title">Contact Us</h2>
            <div class="flex-coffee-under">
                <div class="hr-line"></div>
                <div class="icon"><i class="fas fa-coffee"></i></div>
                <div class="hr-line"></div>
            </div>
        </header>
        <article class="address">
            <p>Address: Sofia, Opalchenska 244 fl. 1</p>
            <p>Telephone: +359 88 44 44 44</p>
            <p>Email: contact@coffeeshop.com</p>
        </article>
        <form class="contact-form">
            <fieldset>
                <legend>Send a message</legend>
                <div class="half left">
                    <input type="text" id="input-name" placeholder="Name">
                    <input type="email" id="input-email" placeholder="Email address">
                    <input type="text" id="input-subject" placeholder="Subject">
                </div>
                <div class="half right">
                    <textarea name="message" type="text" id="input-message" placeholder="Message"></textarea>
                </div>
                <input class="main-button" type="submit" value="Send">
            </fieldset>
        </form>
    </section>


{% endblock %}

{% block body_class %}
contacts
{% endblock %}

