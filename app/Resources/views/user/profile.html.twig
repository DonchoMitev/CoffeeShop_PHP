{% extends 'base.html.twig' %}
{% block body_class %}profile{% endblock %}
{% block main %}
    <div>
        <div class="section-title">
            <h3>Profile details:</h3>
        </div>
        <div class="panel-body">
            <table>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.fullName }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles|join(", ") }}</td>
                </tr>
            </table>
            <hr>
            <a href="{{ path("user_profile_edit") }}" class="main-button">Edit </a>
        </div>
    </div>
{% endblock %}