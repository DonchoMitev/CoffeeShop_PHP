{% extends 'base.html.twig' %}

{% block main %}
    <header class="section-title page">
        <h2 class="page-title">Edit user</h2>
        <div class="flex-coffee-under">
            <div class="hr-line"></div>
            <div class="icon"><i class="fas fa-coffee"></i></div>
            <div class="hr-line"></div>
        </div>
    </header>

    {{ form_start(edit_form, { 'attr': {'class': 'main-form'}}) }}

    {{ form_row(edit_form.fullName) }}
    <hr>
    {{ form_row(edit_form.plainPassword.first, {
        label: "New Password"
    }) }}
    {{ form_row(edit_form.plainPassword.second, {
        label: "New Password Repeated"
    }) }}

    <button class="main-button" formnovalidate>Edit
    </button>

    {{ form_end(edit_form) }}
{% endblock %}

{% block body_class %}edit{% endblock %}

