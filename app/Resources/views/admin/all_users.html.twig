{% extends "base.html.twig" %}

{% block main %}

        <table class="table table-hover" border="1">
            <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles[0] }}</td>
                    {#<td><a href="{{ path('show_user', { 'id': user.id }) }}">Show Details</a></td>#}
                </tr>
            {% endfor %}
            </tbody>
        </table>

{% endblock %}